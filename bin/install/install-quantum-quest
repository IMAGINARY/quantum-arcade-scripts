#!/bin/bash

# Pull the latest version of the repository
COMMITISH="7570bb1d990505e97b7fd7f649fc6aa979c70c0d"
REPO_URL="https://github.com/IMAGINARY/citizen-quest-quantum-quest.git"
INSTALL_DIR="/opt/quantum-quest"

"${BASH_SOURCE%/*}/../internal/install-source-from-git" "$COMMITISH" "$REPO_URL" "$INSTALL_DIR"

# Build the project
cd "$INSTALL_DIR" || exit 1
npm install
npm run build

exit $?
