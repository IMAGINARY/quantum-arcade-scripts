#!/bin/bash

set -e

COMMITISH="cf7c95ee3394f630d087bdf8c86e317f8052c97a"
REPO_URL="https://github.com/IMAGINARY/qaboom"
INSTALL_DIR="/opt/qaboom"

"${BASH_SOURCE%/*}/../internal/install-source-from-git" "$COMMITISH" "$REPO_URL" "$INSTALL_DIR"

# Build the project
cd "$INSTALL_DIR" || exit 1
corepack enable
corepack use yarn@4.9
yarn install
yarn build
corepack disable
